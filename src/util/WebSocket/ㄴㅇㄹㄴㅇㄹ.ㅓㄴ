const WebSocket = require('ws'); // Node.js 환경에서 사용하는 경우

// 웹소켓 서버에 연결
const client = new WebSocket('ws://example.com/socket');

// 서버에 연결되었을 때 호출되는 이벤트
client.onopen = () => {
    console.log('Connected to the WebSocket server');
    
    // 연결된 후 메시지 보내기
    client.send('Hello, server!');
};

// 서버로부터 메시지를 받았을 때 호출되는 이벤트
client.onmessage = (message) => {
    console.log('Received message from server:', message.data);
};


export const connectSiteHandler = (client, siteNo, callback) => {
    client.onConnect = () => {
        const JSON = {"command" : "sync"};
        client.send(JSON);
    };
}
